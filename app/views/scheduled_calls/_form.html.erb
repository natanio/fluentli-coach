<%= simple_form_for(@scheduled_call) do |f| %>
  <%= f.error_notification %>

  <div class="authform">
    <div class="form-inputs">
      <%= f.input :call_details, :input_html => {:rows => 6} %>
      <%= f.hidden_field :price %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>

