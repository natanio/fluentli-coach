<%= simple_form_for(@scheduled_call) do |f| %>
  <%= f.error_notification %>

  <div class="authform">
    <div class="form-inputs">
      <%= f.input :call_details, :input_html => {:rows => 6} %>
      <%= f.input :suggested_time_1, :as => :string %>
      <%= f.input :suggested_time_2 %>
      <%= f.input :suggested_time_3 %>
      <%#= f.input :agreed_time %>
      <%#= f.input :price %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>

